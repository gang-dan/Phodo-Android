<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.phodo">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PHODO"
        tools:targetApi="31">
        <activity
            android:name=".CameraHomeActivity"
            android:exported="true"
            android:label="@string/title_activity_camera_home"
            android:theme="@style/Theme.PHODO.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- android:hardwareAccelerated="false"> -->

        <activity
            android:name=".PhotoGuide.PhotoGuideList"
            android:exported="true"
            android:theme="@style/Theme.PHODO.NoActionBar">
        </activity>
        <activity
            android:name=".PhotoGuide.PhotoGuideDetail"
            android:exported="true"
            android:theme="@style/Theme.PHODO.NoActionBar">

        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">

        </activity>
    </application>

</manifest>