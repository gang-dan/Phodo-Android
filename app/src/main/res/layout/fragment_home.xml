<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.camera.CameraFragment">

    <FrameLayout
        android:id="@+id/manipulation_bar"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/gallery_btn"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:background="@drawable/ic_gallery_btn"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:id="@+id/snap_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="56dp"
                android:background="@drawable/ic_snap_btn"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:id="@+id/list_btn"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:background="@drawable/ic_list_btn"
                android:orientation="horizontal"></LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/camera_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="112dp">

        <TextureView
            android:id="@+id/textureView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextureView>

        <!-- PhotoGuide Filter-->
        <ImageView
            android:id="@+id/origin_img_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"/>

        <!-- 추후에 수정 필요 -->
        <ImageView
            android:id="@+id/filter_img_land"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/filter_img_people"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/filter_img_cpntour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"/>

        <!-- PhotoGuide people/landscape Bar -->
        <FrameLayout
            android:id="@+id/seek_container"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity = "center_horizontal|bottom"
            android:layout_marginBottom="5dp">

            <SeekBar
                android:id="@+id/landsacpe_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="127"
                android:gravity ="top"
                android:thumb="@drawable/custom_seekbar_thumb"
                android:progressDrawable="@drawable/custim_seekbar"/>

            <SeekBar
                android:id="@+id/people_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="127"
                android:layout_marginTop="30dp"
                android:thumb="@drawable/custom_seekbar_thumb"
                android:progressDrawable="@drawable/custim_seekbar"/>
        </FrameLayout>

        <!-- PhotoGuide Btn -->
        <FrameLayout
            android:id="@+id/filter_btn_container"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity = "center_horizontal"
            android:layout_marginTop="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_landscape_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:src="@drawable/landscape_48px"
                app:civ_border_color="#ffffff"
                app:civ_border_overlay="true"
                app:civ_border_width="2dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_people_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity = "center"
                android:src="@drawable/people_group_48px"
                app:civ_border_overlay="true"
                app:civ_border_width="2dp"
                app:civ_border_color="#ffffff"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_contour_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity = "right"
                android:src="@drawable/polyline_48px"
                app:civ_border_overlay="true"
                app:civ_border_width="2dp"
                app:civ_border_color="#ffffff"/>
        </FrameLayout>

        <!--  -->
        <ImageButton
            android:id="@+id/filter_delete_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/cancel_48px" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </FrameLayout>

</RelativeLayout>

