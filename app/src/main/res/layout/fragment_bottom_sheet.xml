<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PhotoMap.BottomSheet"
    android:background="@color/light_gray">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/custom_stroke_round_box"
        android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="120dp"
            android:layout_height="92dp"
            android:background="@drawable/custom_babypurple_box"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="6dp"
            android:layout_marginVertical="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평화의 광장"
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <android.widget.Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="20개의 포토가이드"
                android:drawableLeft="@drawable/baseline_location_on_24"
                android:layout_margin="5dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/custom_babypurple_box"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <android.widget.Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="포토가이드 보러가기"
            android:layout_weight="0.5"
            android:layout_margin="5dp"
            android:textSize="15dp"
            android:background="@drawable/custom_stroke_round_box"/>
        <android.widget.Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="0.5"
            android:text="포토가이드 등록하기"
            android:layout_margin="5dp"
            android:textSize="15dp"
            android:background="@drawable/custom_stroke_round_box"/>
    </LinearLayout>




    </LinearLayout>


</FrameLayout>