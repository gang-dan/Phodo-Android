<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.PHODO.NoActionBar">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#212121"/>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_arrow_back"/>
    <!--<Button
        android:id="@+id/filledButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filled button"
        style="@style/Widget.Material3.Button" />-->

    <android.widget.Button
        android:id="@+id/locBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="180dp"
        android:elevation="20dp"
        android:background="@drawable/baseline_location_on_40" />

    <android.widget.Button
        android:id="@+id/likeBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="100dp"
        android:elevation="20dp"
        android:background="@drawable/ic_favorite_48px" />

    <Button
        android:id="@+id/applyBtn"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="110dp"
        android:background="#00FFFFFF"
        app:icon="@drawable/ic_photo_guide"
        app:iconPadding="0dp"
        app:iconTint="@color/baby_yello" />

    <TextView
        android:id="@+id/applyMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingVertical="3dp"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="170dp"
        android:text="apply this guide"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:background="@drawable/custom_tag_box"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="20dp">

        <LinearLayout
            android:id="@+id/tag_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>